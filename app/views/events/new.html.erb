<h1 class="mb-5 is-size-4">Create a new Event</h1>

<%= simple_form_for @event do |f| %>
  <%= f.input :name, form_default_styling %>
  <%= f.input :location, form_default_styling %>
  <%= f.input :date, form_default_styling(:date) %>
  <%= f.input :description, form_default_styling(:description)   %> <br>
  <%= f.button :submit, "Create Event", class:"button is-primary is-medium" %>
<% end %>