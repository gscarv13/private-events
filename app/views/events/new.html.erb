<h1 class="mb-5">Create a new Event</h1>

<%= form_with model: @event do |f| %>
  <%= f.label :name, "Name: " %>
  <%= f.text_field :name, placeholder: "Name your event" %><br>

  <%= f.label :location, "Location: " %>
  <%= f.text_field :location %><br>

  <%= f.label :date, "Date: " %>
  <%= f.date_field :date %><br>

  <%= f.label :description, "Descripton: " %>
  <%= f.text_area :description %><br><br>

  <%= f.submit %>
<% end %>